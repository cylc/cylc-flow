# This is the ConfigObj cfgspec for gcylc user configuration:
# legal items and default values for $HOME/.cylc/gcylc.rc

# Views to load at start up.
# One or two of "text", "dot", "graph".
initial views = force_list( default=list("text", "dot") )

# Task state color themes are defined in
#   $CYLC_DIR/conf/gcylcrc/themes.rc
# (note the "default" theme MUST be defined in themes.rc)
# Custom user themes in
#   $HOME/.cylc/gcylc.rc

use theme = string( default="default" )
[themes]
    [[__many__]]
        inherit = string( default="default" )
        defaults = force_list( default=None )
        __many__ = force_list( default=None )

