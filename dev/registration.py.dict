def getdb( suite ):
        type = None
        if re.match( '^(\w+):(\w+):(\w+)$', suite ):
            # owner:group:name
            type = 'central'
        elif re.match( '^(\w+):(\w+)$', suite ): 
            # group:name
            type = 'local'
        elif re.match('^(\w+):(\w+):$', suite ):
            # owner:group:
            type = 'central'
        elif re.match('^(\w+):$', suite ):
            # group:
            type = 'local'
        else:
            raise RegistrationError, 'Illegal suite GROUP:NAME: ' + suite

        if type == 'central':
            return centraldb()
        else:
            return localdb()

