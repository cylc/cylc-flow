[meta]
    title = "test reloading after manually removing a task."

[general]
   [[reference test]]
       required run mode = live
       live mode suite timeout = PT30S
[scheduling]
    [[graph]]
        R1 = """
            reloader => remove_me => foo
        """
[runtime]
    [[reloader]]
        script = """
            sed -i "s/remove_me =>//g" $CYLC_SUITE_DEF_PATH/suite.rc
            cylc reload $CYLC_SUITE_NAME
            sleep 10
        """
    [[remove_me]]
        script = false
    [[foo]]
        script = true
