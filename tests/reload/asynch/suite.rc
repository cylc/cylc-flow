[cylc]
   [[reference test]]
       required run mode = live
       live mode suite timeout = 1.0 # minutes
[scheduling]
    initial cycle time = 2010010100
    final cycle time = 2010010200
    [[dependencies]]
        graph = "asynch"
        [[[0, 6]]]
            graph = "asynch => a => b => c"
[runtime]
    [[a,c,asynch]]
        command scripting = "sleep 5"
    [[b]]
        command scripting = "cylc reload $CYLC_SUITE_REG_NAME -f; sleep 5"

