[general]
    force run mode = dummy
    [[reference test]]
        dummy mode suite timeout = PT1M
        allow task failures = True
[scheduling]
    [[graph]]
        R1 = """a:fail => b
            b:fail => c
            c:fail => !a & !b & !c"""
[runtime]
    [[a, b, c]]
        [[[simulation]]]
            fail cycle points = all
