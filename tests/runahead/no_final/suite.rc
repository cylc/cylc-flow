[general]
    cycle point time zone = Z
    [[events]]
        timeout = PT0.3M
        abort on timeout = True
[scheduling]
    runahead limit = PT18H
    initial cycle point = 20100101T00
    [[graph]]
        PT6H = "foo => bar"
        T12 = "foo:fail => shutdown"
[runtime]
    [[foo]]
        script = false
    [[bar]]
        script = true
    [[shutdown]]
        script = """
sleep 5
cylc shutdown $CYLC_SUITE_NAME"""
