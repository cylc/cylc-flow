[scheduler]
    allow implicit tasks = True
[scheduling]
    cycling mode = integer
    initial cycle point = 1
    final cycle point = 2
    [[graph]]
        P1 = "foo[-P1] => foo => bar => baz"
        R1/2/ = "foo => triggerer"
[runtime]
    [[triggerer]]
         script = """
# Cause only bar.1 to run again.
cylc trigger ${CYLC_WORKFLOW_ID} bar.1
         """
