[scheduler]
   [[events]]
      expected task failures = oops.1
[scheduling]
   [[graph]]
      R1 = """
         foo => oops & triggerer
         oops => bar
      """
[runtime]
   [[oops]]
      script = """
         if (( CYLC_TASK_SUBMIT_NUMBER == 1 )); then
            false
         else
            true
         fi
      """
   [[triggerer]]
      script = """
         cylc__job__poll_grep_workflow_log -E 'oops\.1 running .* \(received\)failed'
         cylc trigger ${CYLC_WORKFLOW_ID} oops.1
       """
   [[foo, bar]]
