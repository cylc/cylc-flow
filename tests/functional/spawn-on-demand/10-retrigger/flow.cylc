[scheduler]
   [[events]]
      expected task failures = 1/oops
[scheduling]
   [[graph]]
      R1 = """
         foo => oops & triggerer
         oops => bar
      """
[runtime]
   [[oops]]
      script = """
         if (( CYLC_TASK_SUBMIT_NUMBER == 1 )); then
            false
         else
            true
         fi
      """
   [[triggerer]]
      script = """
         cylc__job__poll_grep_workflow_log -E '1/oops/01:running.* \(received\)failed'
         cylc trigger "${CYLC_WORKFLOW_ID}//1/oops"
       """
   [[foo, bar]]
