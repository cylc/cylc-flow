[scheduler]
    allow implicit tasks = True
[scheduling]
    cycling mode = integer
    initial cycle point = 1
    final cycle point = 2
    runahead limit = P1
    [[graph]]
        R1 = "foo => bar => baz"
        R1/2/ = "foo[-P1] => foo => triggerer"
[runtime]
    [[triggerer]]
         script = """
# Cause both bar.1 and baz.1 to run again.
cylc trigger --reflow --meta=cheese ${CYLC_WORKFLOW_ID} bar.1
         """
