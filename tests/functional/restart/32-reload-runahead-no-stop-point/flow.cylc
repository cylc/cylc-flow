[scheduler]
    cycle point format = %Y

[scheduling]
    initial cycle point = 2018
    runahead limit = P2
    [[graph]]
        P1Y = t1[-P3Y] => t1 => t2 => t3

[runtime]
    [[t1]]
        script = """
            cylc__job__wait_cylc_message_started
            cylc stop --now "${CYLC_WORKFLOW_ID}"
        """
    [[t2]]
        script = """
            cylc__job__wait_cylc_message_started
            cylc reload "${CYLC_WORKFLOW_ID}"
        """
    [[t3]]
        script = true
