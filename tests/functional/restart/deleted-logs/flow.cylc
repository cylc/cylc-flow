[scheduler]
    [[events]]
        abort on stalled timeout = True
        stalled timeout = PT20S
[scheduling]
    [[graph]]
        R1 = one => two
[runtime]
    [[one]]
        script = """
# Tell the workflow to stop after I've finished.
cylc stop $CYLC_WORKFLOW_NAME
sleep 10"""
    [[two]]
        script = true
