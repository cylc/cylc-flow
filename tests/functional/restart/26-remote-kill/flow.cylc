#!jinja2
[scheduler]
    UTC mode = True
    cycle point format = %Y
    [[events]]
        abort on stall timeout = True
        stall timeout = PT0S
        abort on inactivity timeout = True
        inactivity timeout = P6M
[scheduling]
    [[graph]]
        R1 = t1
[runtime]
    [[t1]]
        script = sleep 300
        platform = {{environ["CYLC_TEST_PLATFORM"]}}
        [[[events]]]
            started handler = cylc stop --now --now '%(workflow)s'
