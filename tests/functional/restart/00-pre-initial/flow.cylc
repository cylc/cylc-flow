#!jinja2
[scheduler]
    UTC mode = True
    [[events]]
        abort on stall timeout = True
        stall timeout = PT0S
        abort on inactivity timeout = True
        inactivity timeout = PT3M
[scheduling]
    initial cycle point = 20100808T00
    final cycle point = 20100808T06
    [[graph]]
        R1 = "p1 => p2"
        T00 = """
            p2 => foo
            foo[-P1D] => foo => bar
        """
[runtime]
    [[p1]]
        script = """
cylc__job__wait_cylc_message_started
sleep 1
cylc shutdown --now --max-polls=30 --interval=1 "${CYLC_WORKFLOW_ID}"
"""
    [[foo, p2]]
        script = true
    [[bar]]
        script = true
