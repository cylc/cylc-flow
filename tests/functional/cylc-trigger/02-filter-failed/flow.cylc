[scheduler]
   [[events]]
       expected task failures = fixable1.1, fixable2.1, fixable3.1
[scheduling]
    [[graph]]
# Unhandled failures stay around for retriggering by "fixer"
        R1 = """
fixer
FIXABLES:succeed-all => Z
"""
[runtime]
    [[FIXABLES]]
        script = test "${CYLC_TASK_SUBMIT_NUMBER}" -eq 2
    [[fixable1, fixable2, fixable3]]
        inherit = FIXABLES
    [[fixer]]
        script = """
cylc__job__wait_cylc_message_started
cylc__job__poll_grep_workflow_log -E 'fixable1\.1 running .* \(received\)failed'
cylc__job__poll_grep_workflow_log -E 'fixable2\.1 running .* \(received\)failed'
cylc__job__poll_grep_workflow_log -E 'fixable3\.1 running .* \(received\)failed'
cylc trigger "${CYLC_WORKFLOW_NAME}" '1/fixable*'
        """
    [[Z]]
        script = true
    [[z1, z2]]
        inherit = Z
