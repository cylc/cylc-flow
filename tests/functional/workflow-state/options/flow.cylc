#!jinja2
[scheduler]
    UTC mode = True
[scheduling]
    initial cycle point = 20100101T00Z
    final cycle point = 20100103T00Z
    [[graph]]
        T00 = "foo[-P1D] => foo"
        R1/20100102T00Z = """
            foo => env_polling
            foo => offset_polling
            foo[+P1D] => offset_polling2
        """
[runtime]
    [[foo]]
        script = true
    [[env_polling]]
        script = cylc workflow-state ${CYLC_WORKFLOW_ID}//$CYLC_TASK_CYCLE_POINT/foo:succeeded
    [[offset_polling]]
        script = cylc workflow-state ${CYLC_WORKFLOW_ID}//20100101T0000Z/foo --offset=P1D
    [[offset_polling2]]
        script = cylc workflow-state ${CYLC_WORKFLOW_ID}//20100101T0000Z/foo --offset=-P1D
