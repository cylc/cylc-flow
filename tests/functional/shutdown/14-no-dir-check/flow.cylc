#!Jinja2
[scheduler]
{% if GLOBALCFG is not defined %}
    [[main loop]]
        [[[health check]]]
            interval = PT10S
{% endif %}{# not GLOBALCFG is not defined #}
    [[events]]
        abort on stalled = False
        abort on timeout = True
        timeout = PT1M

[scheduling]
    [[graph]]
        R1 = t1

[runtime]
    [[t1]]
        init-script = cylc__job__disable_fail_signals ERR EXIT
        script = """
cylc__job__wait_cylc_message_started
sleep 5
# Remove suite run directory and don't report back to suite
rm -f "${CYLC_SUITE_RUN_DIR}"
exit 1
"""
