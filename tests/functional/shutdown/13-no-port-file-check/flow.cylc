#!Jinja2
[scheduler]
{% if GLOBALCFG is not defined %}
    [[main loop]]
        [[[health check]]]
            interval = PT10S
{% endif %}{# not GLOBALCFG is not defined #}
    [[events]]
        abort on stalled = False
        abort on timeout = True
        timeout = PT1M

[scheduling]
    [[graph]]
        R1 = t1

[runtime]
    [[t1]]
        init-script = """
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/ERR/}
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/EXIT/}
trap 'wait' EXIT
"""
        script = """
# Remove contact file and don't report back to suite
rm -f "${CYLC_SUITE_RUN_DIR}/.service/contact"
exit 1
"""
