#!Jinja2
[scheduler]
    [[events]]
        abort on stall timeout = True
        stall timeout = PT0S
        expected task failures = t1.1
[scheduling]
    [[graph]]
        R1="""
t1:submit-fail => stopper
reloader => stopper
"""

[runtime]
    [[t1]]
        script=true
        platform = platypus

    [[reloader]]
        script=cylc reload "${CYLC_WORKFLOW_ID}"
    [[stopper]]
        script=cylc stop "${CYLC_WORKFLOW_ID}"
