[scheduler]
    [[events]]
        abort on inactivity = True
        abort on stall timeout = True
        inactivity = PT1M
        stall timeout = PT1M

[scheduling]
    [[dependencies]]
        graph = """
            a => b => c
        """

[runtime]
    [[b]]
        # fail four times then pass
        script = test "$CYLC_TASK_SUBMIT_NUMBER" -ge 3;
        [[[job]]]
            execution retry delays = 2*PT2S
