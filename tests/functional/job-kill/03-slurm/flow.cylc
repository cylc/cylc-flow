#!Jinja2

[scheduler]
    [[events]]
        expected task failures = t1.1

[scheduling]
    [[graph]]
        R1 = t1:start=>stop

[runtime]
    [[t1]]
        script = sleep 120
        platform = {{ environ['CYLC_TEST_PLATFORM'] }}
        [[[directives]]]
            --time=03:00
    [[stop]]
        script="""
            cylc kill "$CYLC_WORKFLOW_ID" 't1'
            cylc stop "$CYLC_WORKFLOW_ID"
        """
