[scheduler]
    UTC mode = True
    [[events]]
        stall timeout = PT1M
        abort on stall timeout = True
[scheduling]
    initial cycle point = 1990
    final cycle point = 2030
    [[graph]]
        R1/1990 = """
            spawner => t1
            holder => releaser => t1
        """
        R1/2010 = """
            spawner[1990] => t2
            releaser[1990] => t2
        """
        R1/2030 = """
            spawner[1990] => t3
            releaser[1990] => t3
            releaser[1990] & t2[2010] & t3 => stopper
        """
[runtime]
    [[holder]]
        script = """
            cylc__job__poll_grep_workflow_log -E '19900101T0000Z/t1.* added to active task pool'
            cylc__job__poll_grep_workflow_log -E '20100101T0000Z/t2.* added to active task pool'
            cylc__job__poll_grep_workflow_log -E '20300101T0000Z/t3.* added to active task pool'
            cylc hold "${CYLC_WORKFLOW_ID}//*/t*"
        """
    [[releaser]]
        script = cylc release "${CYLC_WORKFLOW_ID}//20*/t*"
    [[stopper]]
        script = cylc stop "${CYLC_WORKFLOW_ID}"
    [[spawner, t1, t2, t3]]
        script = true
