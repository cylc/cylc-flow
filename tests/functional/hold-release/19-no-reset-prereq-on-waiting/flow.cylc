[meta]
    title = Test cylc hold/release remembers satisfied dependencies
[scheduler]
    [[events]]
        abort on stall timeout = True
        stall timeout = PT0S
[scheduling]
    [[graph]]
        R1 = """
            spawner => t1
            holder => t1
            holder => releaser
        """
[runtime]
    [[spawner, t1]]
        script = true
    [[holder]]
        script = """
            cylc__job__poll_grep_workflow_log -E '1/t1.* added to active task pool'
            cylc hold "${CYLC_WORKFLOW_ID}//1/t1"
        """
    [[releaser]]
        script = """
            cylc__job__wait_cylc_message_started
            cylc release "${CYLC_WORKFLOW_ID}//1/t1"
        """
