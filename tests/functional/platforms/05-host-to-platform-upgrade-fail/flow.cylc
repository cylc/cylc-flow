#!jinja2
[meta]
description = """
The task settings for not_upgradable_cylc7_settings should not match any
platform: The workflow should fail as a result.
"""

[scheduler]
    UTC mode = True
    [[events]]
        abort on stall timeout = True
        stall timeout = PT0S

[scheduling]
    [[graph]]
        R1 = """
            not_upgradable_cylc7_settings
        """

[runtime]
    [[not_upgradable_cylc7_settings]]
        script = True
        [[[remote]]]
            host = parasite
        [[[job]]]
            batch system = 'loaf'
