[scheduler]
   cycle point format = %Y
[scheduling]
    initial cycle point = 2020
    final cycle point = 2021
    [[graph]]
        P1Y = t1[-P1Y] => t1
[runtime]
    [[t1]]
        script = """
            if [[ "${CYLC_TASK_CYCLE_POINT}" == '2020' ]]; then
                cylc client \
                    "$CYLC_WORKFLOW_ID" \
                    get_graph_raw \
                    >"${CYLC_WORKFLOW_RUN_DIR}/ctb-get-graph-raw.out" \
                    <<__HERE__
                {
                    "start_point_str": "2020",
                    "stop_point_str": "2021",
                    "grouping": ["<all>"]
                }
            __HERE__
            fi
        """
