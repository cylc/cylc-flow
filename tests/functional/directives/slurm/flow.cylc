#!Jinja2

[scheduler]
   [[events]]
       expected task failures = rem2.1

[scheduling]
    [[graph]]
        R1 = """
            rem1 => rem2
            rem2:start => killer => !rem2
        """

[runtime]
    [[SLURM_SETTINGS]]
        platform = {{ environ['CYLC_TEST_PLATFORM'] }}
        [[[directives]]]
            --time = 02:00
    [[rem1]]
        inherit = SLURM_SETTINGS
        script = "sleep 10; true"
    [[rem2]]
        inherit = SLURM_SETTINGS
        script = "sleep 30"
    [[killer]]
        script = cylc kill "$CYLC_WORKFLOW_ID" 'rem2'; sleep 10
