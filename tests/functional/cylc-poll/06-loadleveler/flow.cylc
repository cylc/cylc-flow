#!Jinja2

[scheduling]
    [[graph]]
        R1 = a:start => b

[runtime]
    [[a]]
        script = sleep 20
        platform = {{ environ['CYLC_TEST_PLATFORM'] }}
        [[[directives]]]
            class=serial
            job_type=serial
            notification=never
            resources=ConsumableCpus(1) ConsumableMemory(64mb)
            wall_clock_limit=180,120
    [[b]]
        script = cylc poll "$CYLC_SUITE_NAME" 'a'
