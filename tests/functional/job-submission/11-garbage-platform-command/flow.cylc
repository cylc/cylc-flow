[scheduler]
    [[events]]
        expected task failures = t1.1

[scheduling]
    [[graph]]
        R1 = """t1:submit-fail? => t2"""

[runtime]
    [[t1]]
        script = true
        platform = badhost
    [[t2]]
        script = """
            cylc broadcast "${CYLC_WORKFLOW_ID}" \
                -n 't1' -p '1' -s 'platform=localhost'
            cylc trigger "${CYLC_WORKFLOW_ID}" 't1.1'
        """
