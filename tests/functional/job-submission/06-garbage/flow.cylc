[scheduler]
    [[events]]
        expected task failures = t1.1

[scheduling]
    [[graph]]
        R1 = """t1:submit-fail => t2"""

[runtime]
    [[t1]]
        script = true
        platform = bad
    [[t2]]
        script = """
            grep -q -F \
                'platform: bad - Could not connect to bad' \
                "${CYLC_WORKFLOW_LOG_DIR}/log"

            grep -q -F \
                'remote-init will retry if another host is available' \
                "${CYLC_WORKFLOW_LOG_DIR}/log"

            cylc shutdown "${CYLC_WORKFLOW_ID}"
        """
