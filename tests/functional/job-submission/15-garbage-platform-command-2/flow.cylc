[scheduler]
    [[events]]
        inactivity timeout = PT20S
        abort on inactivity timeout = True
        stall timeout = PT20S
        abort on stall timeout = True

[scheduling]
    [[graph]]
        R1 = foo

[runtime]
    [[foo]]
        script = true
        platform = $(my-host-select)
        [[[job]]]
            submission retry delays = PT5S
