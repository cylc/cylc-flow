#!Jinja2

[scheduler]
    UTC mode = True

[scheduling]
    initial cycle point=1999
    final cycle point=1999
    [[graph]]
        P1Y=sleeper:start => killer => releaser

[runtime]
    [[sleeper]]
        script = test "${CYLC_TASK_SUBMIT_NUMBER}" -eq 2 || sleep 60
        platform = {{ CYLC_TEST_PLATFORM }}
        [[[job]]]
            execution retry delays = PT1S
    [[killer]]
        script = cylc kill "${CYLC_WORKFLOW_ID}" sleeper.1999
    [[releaser]]
        script = cylc__job__wait_cylc_message_started; cylc release "${CYLC_WORKFLOW_ID}" sleeper.1999
