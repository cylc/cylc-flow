[scheduler]
    [[events]]
        expected task failures = 1/b

[scheduling]
    [[graph]]
        R1 = "FAM:fail-any? => foo"
[runtime]
    [[FAM]]
        script = "true"
        completion = succeeded or failed
    [[a,c]]
        inherit = FAM
    [[b]]
        inherit = FAM
        script = "false"
    [[foo]]
        script = "true"
