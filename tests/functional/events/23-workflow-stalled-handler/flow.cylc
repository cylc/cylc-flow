[scheduler]
    [[events]]
        stall handlers = "cylc set-outputs --flow=1 %(workflow)s bar.1"
        stall timeout = PT0S
        abort on stall timeout = False
        expected task failures = bar.1
[scheduling]
    [[graph]]
        R1 = foo => bar => baz

[runtime]
    [[foo]]
        script = true
    [[bar]]
        script = false
    [[baz]]
        script = cylc remove $CYLC_WORKFLOW_ID bar.1
