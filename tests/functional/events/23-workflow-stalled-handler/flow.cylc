[scheduler]
    UTC mode = True # Ignore DST
    [[events]]
        stalled handler = "cylc set-outputs --flow=other %(workflow)s bar.1"
        expected task failures = bar.1
[scheduling]
    [[graph]]
        R1 = foo => bar => baz

[runtime]
    [[foo]]
        script = true
    [[bar]]
        script = false
    [[baz]]
        script = cylc remove $CYLC_WORKFLOW_NAME bar.1
