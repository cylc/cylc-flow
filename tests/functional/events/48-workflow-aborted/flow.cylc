[scheduler]
    [[main loop]]
        [[[health check]]]
            interval = PT1S
    [[events]]
        abort on inactivity = true
        inactivity = PT1M
        abort on stalled timeout = true
        stalled timeout = PT1M
        aborted handler = echo %(event)s %(message)s >"${CYLC_WORKFLOW_RUN_DIR}/handler.out"
[scheduling]
    [[graph]]
        R1 = modify => t2

[runtime]
    [[modify]]
        script = """
            # Pause the workflow, so it does not shutdown
            cylc pause "${CYLC_WORKFLOW_NAME}"
            # Extra content in workflow contact file should cause health check to fail
            echo 'TIME=MONEY' >>"${CYLC_WORKFLOW_RUN_DIR}/.service/contact"
        """
    [[t2]]
        script = true
