[scheduler]
    UTC mode = True # Ignore DST
    allow implicit tasks = True
    [[events]]
        abort on stall timeout = true
        stall timeout = PT0S
        expected task failures = foo.1
[scheduling]
    [[graph]]
        # will abort on stall with unhandled failed foo
        R1 = """foo & goo => FAM
            FAM:succeed-any => bar"""
[runtime]
    [[foo]]
        script = false
    [[FAM]]
    [[f_1, f_2, f_3]]
        inherit = FAM
