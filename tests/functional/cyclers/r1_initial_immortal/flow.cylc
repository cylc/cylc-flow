[scheduler]
    UTC mode = True
    allow implicit tasks = True
[scheduling]
    initial cycle point = 20140101
    [[graph]]
        R1 = "cold_foo"
        PT12H = "cold_foo[^] & foo[-PT12H] => foo"
        R1/+P4D = "stop => foo"
[runtime]
    [[root]]
        script = true
    [[stop]]
        script = cylc shutdown "${CYLC_WORKFLOW_ID}" '20140107'
