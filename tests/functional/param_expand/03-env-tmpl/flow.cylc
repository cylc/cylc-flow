[cylc]
    [[parameters]]
        num = 99..101..2
        stuff = this, that
[scheduling]
    [[graph]]
        R1 = "t1<num,stuff> => t2<num,stuff>"
[runtime]
    [[T]]
        [[[environment]]]
            MYNUM = %(num)d
            MYSTUFF = stuff %(stuff)s
            MY_FILE = %(num)04d-%(stuff)s
    [[t1<num,stuff>]]
        inherit = T
        script = """
echo "${MYNUM} and ${MYSTUFF}" >"${CYLC_SUITE_RUN_DIR}/${MY_FILE}"
"""
    [[t2<num,stuff>]]
        inherit = T
        script = """
test "${MYNUM} and ${MYSTUFF}" = "$(<"${CYLC_SUITE_RUN_DIR}/${MY_FILE}")"
"""
