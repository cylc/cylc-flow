#!jinja2
[scheduling]
    [[dependencies]]
        graph = foo
[runtime]
    [[foo]]
        script = echo 'It is a good test.'
{% if CYLC_TEST_HOST %}
        [[[remote]]]
            host = {{CYLC_TEST_HOST}}
{% endif %}
{% if CYLC_TEST_BATCH_SYS_NAME %}
        [[[job submission]]]
            method = {{CYLC_TEST_BATCH_SYS_NAME}}
{% if CYLC_TEST_BATCH_SYS_NAME == "loadleveler" %}
        [[[directives]]]
            class = serial
            job_type = serial
            notification = never
            wall_clock_limit = 120,60
{% endif %}
{% endif %}
