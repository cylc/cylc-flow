#!Jinja2
[cylc]
    UTC mode = {{UTC_MODE}}
    [[event hooks]]
        abort on timeout = True
        timeout = 0.5
[scheduling]
    initial cycle time = {{START}}
    final cycle time   = {{START}}
    [[special tasks]]
        clock-triggered = clock({{OFFSET|default(0)}})
    [[dependencies]]
        [[[{{HOUR}}]]]
            graph = "clock"
[runtime]
    [[clock]]
        command scripting = true
