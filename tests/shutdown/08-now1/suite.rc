[general]
    [[events]]
        abort on timeout = True
        timeout = PT1M

[scheduling]
    [[graph]]
        R1 = t1:finish => t2

[runtime]
    [[t1]]
        script = sleep 1 && cylc stop --now "${CYLC_SUITE_NAME}"
        [[[events]]]
            started handler = sleep 10 && echo 'Hello %(id)s %(event)s'
            succeeded handler = echo 'Well done %(id)s %(event)s'
    [[t2]]
        script = true
