[cylc]
    UTC mode = True
    [[reference test]]
        live mode suite timeout = PT50S
[scheduling]
    initial cycle point = 20100101T00
    final cycle point = 20100105T00
    [[dependencies]]
        [[[T00, T06, T12, T18]]]
            graph = "a[-PT6H] & c[-PT6H] => a => stopper => c"
[runtime]
    [[a,c]]
        script = "true"
    [[stopper]]
        script = "cylc shutdown $CYLC_SUITE_REG_NAME 2010-01-01; sleep 5"
