#!Jinja2

[cylc]
    [[events]]
        timeout = PT1M
    [[reference test]]
        expected task failures = foo.1
[scheduling]
    [[dependencies]]
        graph = """
            foo
            foo:fail => ! foo
        """
[runtime]
    [[foo]]
        script = """
            wait "${CYLC_TASK_MESSAGE_STARTED_PID}" 2>/dev/null || true
            trap '' EXIT
            trap '' ERR
            exit 1
        """
        [[[job]]]
            execution time limit = PT{{ETL}}S
