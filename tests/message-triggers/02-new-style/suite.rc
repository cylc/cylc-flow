title = "test suite for cylc-6 message triggers"

[cylc]
    UTC mode = True

[scheduling]
    initial cycle point = 20140801T00
    final cycle point = 20141201T00
    [[dependencies]]
        [[[P2M]]]
           graph = """foo:out1 => bar
                      foo[-P2M]:out2 => baz"""
[runtime]
    [[foo]]
        script = """
sleep 2
cylc message "file 1 done"
sleep 2
cylc message "file 2 done"
sleep 2"""
        [[[outputs]]]
            out1 = "file 1 done"
            out2 = "file 2 done"
    [[bar, baz]]
        script = /bin/true
