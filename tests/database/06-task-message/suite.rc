[cylc]
    UTC mode = True
    [[reference test]]
        required run mode = live
        live mode suite timeout = PT30S
[scheduling]
    [[graph]]
        R1 = t1
[runtime]
    [[t1]]
        script = """
sleep 1
cylc message -p 'WARNING' 'You have been warned'
sleep 1
cylc message -p 'CRITICAL' 'You are being critical'
sleep 1
cylc message 'You are normal'
sleep 1
"""
