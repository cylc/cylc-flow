[meta]
    title = Authentication test suite.
    description = """Stalls when the first task fails.
Suite overrides global authentication settings."""
[general]
    [[events]]
        timeout = PT30S
        abort on timeout = True
    [[authentication]]
        public = shutdown
[scheduling]
    cycling mode = integer
    initial cycle point = 1
    final cycle point = 2
    [[graph]]
        R/1 = foo => bar
        R/2 = bar[-P1] => pub
[runtime]
    [[foo]]
        script = /bin/false
    [[bar]]
        script = /bin/true
    [[pub]]
        script = /bin/true
