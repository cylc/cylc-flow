#!jinja2
[cylc]
    UTC mode = True
[scheduling]
    initial cycle point = 20141106T09
    final cycle point = 20141106T09
    [[special tasks]]
        clock-trigger = foo(PT5M)
    [[graph]]
        PT1H = "woo => foo & show"
[runtime]
    [[woo]]
        script = true
    [[foo]]
        script = sleep 10
    [[show]]
        script = """
sleep 4
cylc show "$CYLC_SUITE_NAME" foo.20141106T0900Z >{{ TEST_OUTPUT_PATH }}
"""
