[cylc]
   [[reference test]]
       required run mode = live
       live mode suite timeout = 0.5 # minutes
       allow task failures = True
       expected task failures = a.1, b.1, c.1

[scheduling]
    [[dependencies]]
        graph = """FAM:fail-all => foo
                   foo => !FAM"""
[runtime]
    [[FAM]]
        script = "false"
    [[a,b,c]]
        inherit = FAM
    [[foo]]
        script = "true"
