[cylc]
   [[reference test]]
       required run mode = live
       live mode suite timeout = PT30S
       allow task failures = True
       expected task failures = a.1, c.1

[scheduling]
    [[dependencies]]
        graph = """FAM:succeed-any => foo
                   foo => !FAM"""
[runtime]
    [[FAM]]
        script = "false"
    [[a,c]]
        inherit = FAM
    [[b]]
        inherit = FAM
        script = "true"
    [[foo]]
        script = "true"
