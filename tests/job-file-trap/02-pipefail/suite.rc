#!jinja2
[general]
   abort if any task fails = True
   [[reference test]]
       required run mode = live
       live mode suite timeout = PT10S
       expected task failures = t1.1

[scheduling]
    [[graph]]
        R1=t1

[runtime]
    [[t1]]
        script=echo "${CYLC_HAS_NO_SUCH_VARIABLE}" | tee 'no-such-variable.txt'
