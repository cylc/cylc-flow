[scheduler]
   [[events]]
      abort on stall timeout = True
      stall timeout = PT20S
[scheduling]
    [[graph]]
        R1 = "foo => stopper"
[runtime]
    [[foo]]
        [[[events]]]
            started handlers = sleeper.sh %(id)s
    [[stopper]]
        script = cylc stop "${CYLC_WORKFLOW_ID}"
