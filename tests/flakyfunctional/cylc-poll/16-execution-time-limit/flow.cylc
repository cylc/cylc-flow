#!Jinja2

[scheduler]
    [[events]]
        abort on stalled = True
        expected task failures = foo.1
[scheduling]
    [[graph]]
        R1 = """
            foo
            foo:fail => ! foo
        """
[runtime]
    [[foo]]
        init-script = """
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/ERR/}
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/EXIT/}
"""
        script = cylc__job__wait_cylc_message_started; exit 1
        [[[job]]]
            execution time limit = PT5S
