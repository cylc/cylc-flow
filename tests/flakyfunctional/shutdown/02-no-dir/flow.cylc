[scheduling]
    [[graph]]
        R1 = bar
[runtime]
    [[bar]]
        init-script = """
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/ERR/}
CYLC_FAIL_SIGNALS=${CYLC_FAIL_SIGNALS/EXIT/}
"""
        script = """
cylc__job__wait_cylc_message_started
sleep 2
cylc shutdown "${CYLC_SUITE_NAME}"
rm -f "${CYLC_SUITE_RUN_DIR}"
exit 1
"""
