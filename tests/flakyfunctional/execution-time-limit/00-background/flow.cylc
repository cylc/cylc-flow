#!Jinja2

[scheduler]
   [[events]]
       abort on inactivity timeout = True
       abort on stall = True
       inactivity timeout = PT2M
       expected task failures = foo.1

[scheduling]
    [[graph]]
        R1 = foo

[runtime]
    [[foo]]
        script = sleep 10
        platform = {{ environ['CYLC_TEST_PLATFORM'] }}
        [[[job]]]
            execution time limit = PT5S
