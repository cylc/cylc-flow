[cylc]
   UTC mode = True
   [[reference test]]
       required run mode = live
       live mode suite timeout=PT1M
[scheduling]
    initial cycle point = 20100808T00
    final cycle point = 20100809T00
    [[dependencies]]
        [[[T00]]]
            graph = "foo[-P1D]:restart1 => foo"
[runtime]
    [[foo]]
        script = """
sleep 1
cylc message "restart files ready for $(cylc cycle-point --offset-hours=24 )"
sleep 1"""
        [[[outputs]]]
            restart1 = "restart files ready for [+PT24H]"
