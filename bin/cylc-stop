import sys
if '--use-ssh' in sys.argv[1:]: 
    sys.argv.remove( '--use-ssh' )
    from cylc.remote import remrun
    if remrun().execute( force_required=True ):
        sys.exit(0)

from cylc.prompt import prompt
from cylc.cycle_time import ct, CycleTimeError
from cylc.TaskID import TaskID, TaskIDError
from cylc import cylc_pyro_client
from cylc.CylcOptionParsers import cop
from cylc.command_prep import prep_pyro
from cylc.poll import poller
from cylc.port_file import PortFileError

class stop_poller( poller ):
    """A polling object that checks if a suite has stopped yet."""

    def connect( self ):
        try:
            self.proxy = cylc_pyro_client.client(
                    self.args['suite'],
                    self.args['pphrase'],
                    self.args['owner'],
                    self.args['host'],
                    self.args['pyro_timeout'],
                    self.args['port'] ).get_proxy('suite-info')
        except:
            return False
        else:
            return True
 
    def check( self ):
        # return True if suite has stopped (success) else False
        try:
           self.proxy.get( 'ping suite' )
        except:
            # failed to ping - suite stopped
            return True 
        else:
            # pinged - suite must be alive
            return False

parser = cop( """cylc [control] stop|shutdown [OPTIONS] ARGS

1/ cylc stop REG 
   Clean shutdown - cease submitting tasks then shut down after all
submitted or running tasks have finished and all queued event handlers
and job poll and kill commands have executed.

2/ cylc stop --quick REG 
   Quick shutdown - cease submitting tasks and shut down without waiting
for submitted or running tasks to finish, but do wait for remaining
event handlers and job poll and kill commands to be executed.

3/ cylc stop --now REG 
   Immediate shutdown - cease submitting tasks and shut down without
waiting for submitted or running tasks to finish, or for remaining
queued event handlers and job poll and kill commands to execute.

4/ cylc stop --kill REG
   Initiate a clean shutdown (1/ above) after killing any current
submitted or running tasks.

5/ cylc stop REG STOP
   Initiate a clean shutdown (1/ above) as soon as all tasks have passed
cycle time or wall clock time STOP, or after task ID STOP has finished.
Wall clock time format is YYYY/MM/DD-HH:mm.

The command exits immediately after queueing the stop request unless
polling mode (-w/--wait) forces it to wait for the suite to stop.""",
    pyro=True, argdoc=[ ("REG", "Suite name"), 
    ("[STOP]", """a/ task TAG (cycle time or integer), or
                        b/ YYYY/MM/DD-HH:mm (clock time), or
                        c/ TASK (task ID).""")] )

parser.add_option( "-n", "--now", 
        help="Shut down immediately regardless of any tasks "
        "currently in the submitted or running states, and "
        "regardless of any queued event handlers and job poll "
        "and kill commands.",
        action="store_true", default=False, dest="now" )

parser.add_option( "-k", "--kill", 
        help="Shut down cleanly after killing any tasks currently "
        "in the submitted or running states.",
        action="store_true", default=False, dest="kill" )

parser.add_option( "-q", "--quick", 
        help="Shut down after Killing current submitted or running tasks.",
        action="store_true", default=False, dest="quick" )

stop_poller.add_to_cmd_options( parser )

(options, args) = parser.parse_args()

suite, pphrase = prep_pyro( args[0], options ).execute()

shutdown_at = False
if len( args ) == 2:
    shutdown_at = True
    shutdown_arg = args[1] 
    if options.kill:
        print >> sys.stderr, "WARNING: ignoring --kill ( not compatible with [STOP])"
        options.kill = False
 
if options.kill and ( options.now or options.quick ):
    parser.error( "ERROR: --kill is not compatible with --now or --quick" )

if options.wait:
    spoller = stop_poller( "suite stopped", options.timeout,
            options.interval, args={
                'suite'   : suite,
                'pphrase' : pphrase,
                'owner'   : options.owner,
                'host'    : options.host,
                'pyro_timeout' : options.pyro_timeout,
                'port'    : options.port
                })
try:
    proxy = cylc_pyro_client.client( suite, pphrase, options.owner,
            options.host, options.pyro_timeout, options.port,
            options.verbose ).get_proxy( 'command-interface' )
except PortFileError, x:
    # suite not running: this is OK for the 'stop' command
    print >> sys.stderr, x
    print >> sys.stderr, "WARNING: suite not running (OK for \"cylc stop\")"
    sys.exit(0)
except Exception, x:
    if options.debug:
        raise
    raise SystemExit(x)

method = None
if shutdown_at:
    # STOP argument detected
    try:
        # is it a task ID?
        tid = TaskID( shutdown_arg )
    except TaskIDError:
        # not a task ID
        try:
            # is it a date time YYYY/MM/DD-HH:mm?
            date, time = shutdown_arg.split('-')
            yyyy, mm, dd = date.split('/')
            HH,MM = time.split(':')
        except:
            # not a task ID or a date time; 
            try:
                # is it a cycle time?
                ct(shutdown_arg)
            except CycleTimeError,x:
                # nope: is it an async integer tag?
                try:
                    int( shutdown_arg )
                except ValueError:
                    # nope: not task ID, date time, or TAG
                    raise SystemExit( "ERROR:, invalid STOP argument: " + shutdown_arg )
                else:
                    # is probably an async TAG
                    method = 'stop after tag'
                    #print 'async'
            else:
                # is a cycle time
                method = 'stop after tag'
                #print 'cycling'
        else:
            # is a date time
            method = 'stop after clock time'
            #print 'date-time'
    else:
        # is a task ID
        method = 'stop after task'
        #print 'task id'

    #print method

    prompt( 'Set shutdown ' + shutdown_arg + ' for ' + suite, options.force )
    try:
        result = proxy.put( method, shutdown_arg )
    except Exception,x:
        if options.debug:
            raise
        sys.exit(x)

elif options.now:
    prompt( 'Shut down ' + suite + ' now', options.force )
    try:
        result = proxy.put( 'stop now' )
    except Exception,x:
        if options.debug:
            raise
        sys.exit(x)

elif options.quick:
    prompt( 'Shut down ' + suite + ' quickly', options.force )
    try:
        result = proxy.put( 'stop quickly' )
    except Exception,x:
        if options.debug:
            raise
        sys.exit(x)

else:
    prompt( 'Shut down ' + suite, options.force )
    try:
        result = proxy.put( 'stop cleanly', options.kill )
    except Exception,x:
        if options.debug:
            raise
        sys.exit(x)

if result[0]:
    # command queued
    print result[1]
else:
    # (should not happen)
    sys.exit( result[1] )

if options.wait:
    if not spoller.connect():
        # (should not happen if we got the command proxy above)
        sys.exit( "ERROR: cannot connect to the suite info proxy" )
    if not spoller.poll():
        sys.exit(1)

